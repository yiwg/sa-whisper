page{
      background-color: #Efeff4;
}

.container{
      background-color: #Efeff4;
    height:100%;
}

.fl{
    float:left;
}

.fr{
    float:right;
}

.item{
    width:100%;
    height: 84px;
    border-bottom: 1px solid #d4d4d4;
    border-top: 1px solid #d4d4d4;
    background: #fff;
}

.description{
    border-bottom: 0px;
    background: #fff;
    padding-top: 10px;
    padding-bottom: 10px;
    padding-left: 14px;
}

.desDetail{
    font-size: 12px;
    color:#ACACAA
}


.itemLeft{
    width: 44%;
    margin-top: 10px;
    height: 60px;
}

.personImg{
    width:60px;
    height:60px;
    margin-left: 3px;
    border-radius: 50%;
}

.personName{
    color:black;
    margin-top: 21px;
    text-indent:8px;
}

.itemRight{
    background-color: #FEA80B;
    text-align: center;
    vertical-align: middle;
    border-radius:2rem 0 0 2rem;
    width:7rem;
    height:2rem;
    float: right;
    margin-top: 1.5rem;
    line-height:2rem;
    font-size: 0.8rem;
}

.upSpace{
    height: 18px;
    font-size: 12px;
    color: #666;
}

.itemHelp{
    width:100%;
    border-bottom: 0px solid #d4d4d4;
    border-top: 1px solid #d4d4d4;
    background: #fff;
}

.itemHelpLeft{
    width: 30%;
    margin-top: 14px;
    margin-bottom: 14px;
}

.helpName{
    color:black;
    text-indent: 14px;
}

.itemHelpRight{
    text-align: left;
    border: 0;
    font-size: 16px;
    color: #e8ae26;
    margin-top: 14px;
    margin-bottom: 14px;
    margin-right: 1%;
    width: 65%;
}

.helpDetail{
    color:black;
}

.publish-button-container{
  position:relative;
  bottom:0;
  padding-top:8%;
}

.publish-button{
  width:100%;
  font-size:18px;
  text-align:center;
  text-decoration:none;
  line-height:2.2;
  border-radius:0px;
  overflow:hidden;
  color:#FFFFFF;
  background-color:#F5A520;
}