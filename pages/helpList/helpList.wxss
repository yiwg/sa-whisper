.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.textStyle {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.textContainer {
  margin-top: 200px;
}

.help-list{
  width: 100%;
  height: 8rem;
  /*background-image: url('../../images/bg01.jpg');*/
  background-repeat: no-repeat;
  background-size: cover;
  position:relative;
}

.help-list-bottomImg-container{
  
width:100%;
opacity:0.2;
position:absolute;
top:0;
height:2.5rem;
}

.help-list-bottomImg{
  width: 100%;
  height: 8rem;
  /*background-image: url('../../images/bg01.jpg');*/
  background-repeat: no-repeat;
  background-size: cover;
  position:relative;
}

.headIcon{
  width: 3rem;
  height: 3rem; 
  border-radius: 50%;
  margin-top:1rem;
  margin-left:1rem;
}

.userName{
  position: absolute;
  margin-top:2rem;
  margin-left: 0.6rem;
}

.help-list-top{
  display: inline-block;
  width: 100%;
}
.help-list-top-left{
    display: inline-block;
}
.help-list-top-right{
    background-color: #FEA80B;
    text-align: center;
    vertical-align: middle;
    border-radius:2rem 0 0 2rem;
    width:7rem;
    height:2rem;
    float: right;
    margin-top: 1.6rem;
    line-height:2rem;
    font-size: 0.8rem;
}

.helplist-top-type{
line-height: 40px;
background-color: #ffffff;
border-top:1px solid #999;
border-bottom:1px solid #999;
}

.helplist-top-type-picker{
margin-left:5%;
}

.helplist-container{
  background-color: #E8E8E8;
}

.help-list-bottom{
  width: 100%;
  color: #ffffff;
  background-color:black;
  opacity:0.5;
  position:absolute;
  bottom: 0;
  vertical-align: middle;
  height: 2.5rem;
  line-height: 2.5rem;

}

.help-list-bottom-left{
margin-left: 5%;
display: inline-block;
width: 70%;
}

.help-list-bottom-right{
float: right;
margin-right: 5%;
}

.hint{
    text-align: center;
    padding-top:100px;
    padding-bottom:100px;
    border-bottom: 1px solid #d4d4d4;
    background-color: #fbc13d;
}

.publish-type-arrow{
  margin-left: 5%;
  height: 25px;
  width: 7%;
  padding-top:7px;
  padding-bottom:8px;
  float: right;
  padding-right:15px;
}